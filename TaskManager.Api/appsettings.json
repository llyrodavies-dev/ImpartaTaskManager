{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=taskmanager.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "SuperSecretKeyForTaskManagerApiThatIsAtLeast32Characters!", // use a secure random string in production
    "Issuer": "TaskManagerApi"
  },
  "FileStorage": {
    "BasePath": "UserFiles",
    "DefaultProfileImagePath": "Assets/Images/Default_Profile_Image.png",
    "MaxFileSizeBytes": 5242880,
    "AllowedImageExtensions": [ ".jpg", ".jpeg", ".png" ]
  },
  "AllowedHosts": "*"
}
